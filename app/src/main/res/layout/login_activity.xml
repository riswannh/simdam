<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data></data>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".main.suin.main.login.LoginActivity">

    <LinearLayout
        style="@style/MyVerticalLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:context=".main.login.LoginActivity">

        <ImageView
            android:id="@+id/ivLogo"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            app:srcCompat="@mipmap/ic_launcher"
            tools:ignore="ContentDescription" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_margin_32dp"
            android:text="Username" />

        <EditText
            android:id="@+id/username"
            style="@style/MyBackgroundGrey"
            android:background="@color/grey"
            android:inputType="text"
            android:singleLine="true"
            android:textSize="@dimen/size_16sp"
            tools:ignore="TextFields" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:text="Password" />

        <EditText
            android:id="@+id/password"
            style="@style/MyBackgroundGrey"
            android:background="@color/grey"
            android:inputType="textPassword"
            android:singleLine="true"
            android:textSize="@dimen/size_16sp"
            tools:ignore="TextFields" />

        <Button
            android:id="@+id/btnLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/MySimpleButton"
            android:layout_marginTop="@dimen/activity_margin_32dp"
            android:background="@color/pdamBlue"
            android:text="Login" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
</layout>